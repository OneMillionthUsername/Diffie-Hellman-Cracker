<Window x:Class="WpfApp1.File_Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="File Explorer" Height="450" Width="800">
    <Grid>
        <Label x:Name="labelFiles" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 10,0,0" Content="Files" Width="100" Height="30"></Label>
        <DataGrid Name="fileNames" DataGridRow.Selected="FileNames_Selected" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,10,0,0" HeadersVisibility="Column" IsReadOnly="True" MouseDoubleClick="Double_Click"/>
    </Grid>
</Window>
